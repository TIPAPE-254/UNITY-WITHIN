# AI API keys (at least one required for Buddie AI)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=
GROQ_API_KEY=
MISTRAL_API_KEY=
DEEPSEEK_API_KEY=

# Database (Azure Database for PostgreSQL Flexible Server)
DB_HOST=your-server.postgres.database.azure.com
DB_USER=adminuser
DB_PASSWORD=your_password
DB_NAME=UNITY_WITHIN
DB_PORT=5432
DB_SSL=true

# Server
# Note: Azure App Service sets PORT automatically; only set this locally if needed.
PORT=5000

# CORS â€” comma-separated list of allowed frontend origins
# For Azure Static Web Apps or custom domain, add them here
ALLOWED_ORIGINS=https://your-app.azurewebsites.net

# Path to built frontend static files, relative to the server directory
# Default: dist (matches CI/CD packaging)
STATIC_FILES_PATH=dist

# Password reset links (frontend base URL)
# Example: https://www.unitywithin.app (never localhost in production)
RESET_PASSWORD_BASE_URL=https://www.unitywithin.app

# Brevo SMTP
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=no-reply@unitywithin.app
BREVO_SMTP_PASS=your_brevo_smtp_password_or_api_key
BREVO_FROM_EMAIL=no-reply@unitywithin.app
BREVO_FROM_NAME=UnityWithin

# Buddie natural-conversation calibration dataset (optional)
# Generated by: npm run prepare:dailydialog
BUDDIE_DIALOG_DATA_PATH=./data/dailydialog_examples.json
# Generated by: npm run prepare:counseling
BUDDIE_COUNSELING_DATA_PATH=./data/mental_health_counseling_examples.json
# Number of few-shot examples to inject per request
BUDDIE_DIALOG_FEWSHOT_COUNT=4
